<?xml version="1.0" encoding="UTF-8"?>
<cpeDescription>
    <collectionReader>
        <collectionIterator>
            <descriptor>
                <import location="QuestionCollectionReader.xml"/>
            </descriptor>
            <configurationParameterSettings>
		        <nameValuePair>
		            <name>QuestionFile</name>
		            <value>
		                <string><envVarRef>user.dir</envVarRef>/dataset/questions/toy.txt</string>
		            </value>
		        </nameValuePair>
		    </configurationParameterSettings>
        </collectionIterator>
    </collectionReader>
    <casProcessors casPoolSize="2" processingUnitThreadCount="1">
		<casProcessor deployment="integrated" name="Question Answering System">
	        <descriptor>
                <import location ="QuestionAnsweringSystemAnnotator.xml"/>
            </descriptor>
            <configurationParameterSettings>
                <nameValuePair>
                    <name>SystemConfiguration</name>
                    <value>
                        <string><envVarRef>user.dir</envVarRef>/conf/toy-system-configuration.txt</string>
                    </value>
                </nameValuePair>
            </configurationParameterSettings>
            <deploymentParameters/>
            <filter></filter>
            <errorHandling>
                <errorRateThreshold action="terminate" value="100/1000"/>
                <maxConsecutiveRestarts action="terminate" value="30"/>
                <timeout max="100000"/>
            </errorHandling>
            <checkpoint batch="10000"/>
        </casProcessor>
        <casProcessor deployment="integrated" name="Zip XMI Writer CAS Consumer">
            <descriptor>
                <import location="ZipXmiWriterCasConsumer.xml"/>
            </descriptor>
            <configurationParameterSettings>
		        <nameValuePair>
		            <name>OutputDirectory</name>
		            <value>
		                <string><envVarRef>user.dir</envVarRef>/target</string>
		            </value>
		        </nameValuePair>
		    </configurationParameterSettings>
            <deploymentParameters/>
            <filter></filter>
            <errorHandling>
                <errorRateThreshold action="terminate" value="100/1000"/>
                <maxConsecutiveRestarts action="terminate" value="30"/>
                <timeout max="10000"/>
            </errorHandling>
            <checkpoint batch="10000"/>
        </casProcessor>
        <casProcessor deployment="integrated" name="Evaluation CAS Consumer">
            <descriptor>
                <import location="EvaluationCasConsumer.xml"/>
            </descriptor>
            <configurationParameterSettings>
		        <nameValuePair>
		            <name>InputDirectory</name>
		            <value>
		                <string><envVarRef>user.dir</envVarRef>/target</string>
		            </value>
		        </nameValuePair>
                <nameValuePair>
		            <name>SystemOutputSplitSize</name>
		            <value>
		                <integer>25</integer>
		            </value>
		        </nameValuePair>
		    </configurationParameterSettings>
            <deploymentParameters/>
            <filter></filter>
            <errorHandling>
                <errorRateThreshold action="terminate" value="100/1000"/>
                <maxConsecutiveRestarts action="terminate" value="30"/>
                <timeout max="10000"/>
            </errorHandling>
            <checkpoint batch="10000"/>
        </casProcessor>
    </casProcessors>
    <cpeConfig>
        <numToProcess>-1</numToProcess>
        <deployAs>immediate</deployAs>
        <checkpoint file="" time="300000"/>
        <timerImpl></timerImpl>
    </cpeConfig>
</cpeDescription>
